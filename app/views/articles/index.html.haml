
%div{ class: "container mx-auto px-4 sm:px-8 max-w-3xl" }
  #notice= notice
  %div{ class: "py-8" }
    %div{ class: "-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto" }
      %div{ class: "inline-block min-w-full shadow rounded-lg overflow-hidden" }
        - if @articles.present?
          %table{ class: "min-w-full leading-normal" }
            %thead
              %tr
                %th{ scope: "col", class: "px-5 py-3 bg-white  border-b border-gray-200 text-gray-800  text-left text-sm uppercase font-normal" }
                  Welcome to abtest using Split

                %th{ scope: "col", class: "px-5 py-3 bg-white  border-b border-gray-200 text-gray-800  text-right text-sm uppercase font-normal" }
                  %span{ 'aria-hidden': "true", class: "text-indigo-600 hover:text-indigo-900" }
                    = link_to 'Create', new_article_path

            - @articles.each_with_index do |article, index|
              %tbody
                %tr
                  %td{ class: "px-5 py-5 border-b border-gray-200 bg-white text-sm" }
                    %a{ href: article_path(article), class: "text-gray-900 whitespace-no-wrap" }
                      = article.title

                  %td{ class: "px-5 py-5 border-b border-gray-200 bg-white text-sm text-right" }
                    %span{ 'aria-hidden': "true", class: "text-indigo-600 hover:text-indigo-900" }
                      = link_to 'Edit', edit_article_path(article)

        - else
          %div{ class: "bg-white dark:bg-gray-800 " }
            %div{ class: "text-center w-full mx-auto py-12 px-4 sm:px-6 lg:py-16 }lg:px-8 z-20" }
              %h2{ class: "text-3xl font-extrabold text-black dark:text-white sm:text-4xl" }
                %span{ class: "block" }
                  Create your first article

                %span{ class: "block text-indigo-500" }
                  It&#x27;s today or never.

              %div{ class: "lg:mt-0 lg:flex-shrink-0" }
                %div{ class: "mt-12 inline-flex rounded-md shadow" }
                  = link_to 'Create first article', new_article_path, class: "py-4 px-6  bg-indigo-600 hover:bg-indigo-700 focus:ring-indigo-500 focus:ring-offset-indigo-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-lg"
